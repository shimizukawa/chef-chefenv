current_dir = File.dirname(__FILE__)

log_level                :info
log_location             STDOUT
node_name                '<%= node.chefenv.node_name %>'
client_key               "#{current_dir}/vagrant.pem"
validation_client_name   'chef-validator'
validation_key           '/etc/chef/validation.pem'
chef_server_url          '<%= node.chefenv.chef_server_url %>'
cache_type               'BasicFile'
cache_options( :path =>  "#{current_dir}/checksums" )
cookbook_path            "#{current_dir}/../cookbooks"
cookbook_copyright       '<%= node.chefenv.copyright %>'
cookbook_email           '<%= node.chefenv.email %>'
cookbook_license         '<%= node.chefenv.license %>'
environment_path         "#{current_dir}/../environments"
